# Alias all the things
alias cat='bat --style full --theme OneHalfDark --color always --decorations always --paging never'
alias orphan='pamac remove -uco --no-confirm'
alias ls='eza --git --long --header --icons'
alias df='duf'
alias ps='procs'
alias du='dua'
alias makevenv='python -m venv venv'
alias activate_venv='source venv/bin/activate'
alias git-commit='/home/mindriddler/.config/czg/scope.sh && czg --config=/home/mindriddler/.config/czg/cz.json'
alias wakatime-cli='wakatime'
alias rm="echo Use 'del', or the full path i.e. '/bin/rm'"
alias trash="rmtrash"
alias del="rmtrash"

# Source all the things
source /opt/google-cloud-cli/completion.zsh.inc
